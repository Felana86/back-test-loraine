FROM node:20.11.1-alpine

WORKDIR /app

COPY package*.json ./

RUN npm cache clean --force

RUN npm install --legacy-peer-deps

COPY . .

# prisma generate and populate the database
RUN npx prisma generate
RUN npx run migrate

EXPOSE 3000

CMD [  "npm", "start","dev", "start:migrate:prod", "npm","run","migrate"] 